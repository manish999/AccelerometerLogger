<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>            
            <item>
                <shape>
                     <gradient android:angle="270" android:endColor="#058ae9" android:startColor="#034f86" />
                     <stroke android:width="1dp" android:color="#034f86" />
                     <corners android:radius="5dp" />
                     <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>          
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="#034f86" android:startColor="#058ae9" />
                    <stroke android:width="1dp" android:color="#034f86" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>
